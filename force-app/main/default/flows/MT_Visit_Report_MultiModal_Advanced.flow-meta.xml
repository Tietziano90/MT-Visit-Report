    <formulas>
        <name>PromptResponseFormula</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!Call_Prompt_With_Image.output}), {!Call_Prompt_No_Image.output}, {!Call_Prompt_With_Image.output})</expression>
    </formulas>
    <formulas>
        <name>FoundAccountId</name>
        <dataType>String</dataType>
        <expression>IF(
  ISBLANK({!Find_Account_via_DataCloud.output}),
  {!MT_Einstein_Transcribe.account.Id},
  IF(
    CONTAINS({!Find_Account_via_DataCloud.output}, &quot;accountId&quot;),
    MID(
      {!Find_Account_via_DataCloud.output},
      FIND(&quot;accountId&quot;, {!Find_Account_via_DataCloud.output}) + 13,
      18
    ),
    {!MT_Einstein_Transcribe.account.Id}
  )
)</expression>
    </formulas>
