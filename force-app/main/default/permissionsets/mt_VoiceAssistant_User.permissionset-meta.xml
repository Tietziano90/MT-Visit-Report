<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <customPermissions>
        <enabled>true</enabled>
        <name>mt_IsAIMeetingFollowUpUser</name>
    </customPermissions>
    <description>Provides access to MT Voice Assistant features including Einstein Transcribe.</description>
    <externalCredentialPrincipalAccesses>
        <enabled>true</enabled>
        <externalCredentialPrincipal>mt_EinsteinTranscribe-AutDetails</externalCredentialPrincipal>
    </externalCredentialPrincipalAccesses>
    <externalCredentialPrincipalAccesses>
        <enabled>true</enabled>
        <externalCredentialPrincipal>mt_OpenAI_Whisper-AutDetails</externalCredentialPrincipal>
    </externalCredentialPrincipalAccesses>
    <hasActivationRequired>false</hasActivationRequired>
    <label>MT Voice Assistant User</label>
    <tabSettings>
        <tab>MT_Voice_Assistant_Settings</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>
